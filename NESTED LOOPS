for(let i=1;i<=5;i++){
  for(let j=1;j<=i;j++){
    document.write(" * ");
    }
    document.write("<br>");
    }

    for(let i=1;i<=6;i++){
      for(let j=1;j<=6-i;j++){
        document.write(" - ");
        }
        for(let j=1; j<=i; j++){
          document.write(" * ");
        }
        document.write("<br>");
    }

    let n=6;
        for(let i=1;i<=n;i++){
            for(let j=1;j<=n-i;j++){
                document.write("&nbsp;&nbsp;")
            }
            for(let j=1;j<=2*i-1;j++){
                document.write("*")
            }
            document.write("<br>")
        }
